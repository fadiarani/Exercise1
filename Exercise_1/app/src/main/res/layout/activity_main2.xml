<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/label_app"
            android:textAlignment="center"
            android:textColor="@color/judul"
            android:textSize="29sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/button1"
            android:layout_width="137dp"
            android:layout_height="115dp"
            android:background="@drawable/images"
            android:text="PERSEGI"
            android:onClick="showPopup"/>


        <Button
            android:id="@+id/button2"
            android:layout_width="157dp"
            android:layout_height="171dp"
            android:background="@drawable/lingkaran"
            android:text="Lingkaran"
            android:onClick="showPopup"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="171dp"
            android:layout_height="118dp"
            android:background="@drawable/persegipanjang"
            android:text="PERSEGI PANJANG"
            android:onClick="showPopup"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="166dp"
            android:layout_height="133dp"
            android:background="@drawable/download"
            android:text="SEGITIGA"
            android:onClick="showPopup"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="205dp"
            android:layout_height="91dp"
            android:background="@drawable/trapesium"
            android:text="TRAPESIUM"
            android:onClick="showPopup"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>